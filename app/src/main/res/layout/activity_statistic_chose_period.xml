<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0sp"
    android:paddingLeft="0sp"
    android:paddingRight="0sp"
    android:paddingTop="0sp"
    tools:context="com.example.newcosts.StatisticChosePeriodActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:weightSum="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="2"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Начальная дата:"
                android:id="@+id/textView"
                android:layout_gravity="bottom" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/initialDateTextView"
                android:layout_gravity="bottom|end"
                android:gravity="center"
                android:textSize="25sp"
                android:inputType="date"
                android:editable="false"
                android:focusable="false"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="2"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Конечная дата:"
                android:id="@+id/activity_input_data_sign_textview" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/endingDateTextView"
                android:gravity="center"
                android:textSize="25sp"
                android:inputType="date"
                android:editable="false"
                android:focusable="false"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF9800"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0sp"
            android:weightSum="2">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Задать период"
                android:textColor="@drawable/button_text_color"
                android:id="@+id/setPeriodButton"
                android:background="@drawable/keyboard_buttons_custom"
                android:onClick="onSetPeriodButtonClick"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#FF9800"/>

            <Button
                android:text="@string/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chosePeriodActivity_cancel_btn"
                android:background="@drawable/keyboard_buttons_custom"
                android:textColor="@drawable/button_text_color"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF9800"/>

    </LinearLayout>

</RelativeLayout>

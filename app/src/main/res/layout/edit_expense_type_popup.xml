<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000sp">




    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edit_expense_type_popup_expense_type_textview"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/edit_text_custom"
        android:minHeight="70sp"

        android:textSize="25sp"
        android:textAlignment="center"
        android:hint="Название категории"
        android:gravity="center"
        android:editable="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF9800"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="4">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Добавить"
                    android:textColor="@drawable/button_text_color_black"
                    android:id="@+id/edit_expense_type_popup_rename_expense_type_button"
                    android:layout_weight="1"
                    android:background="@drawable/keyboard_buttons_custom" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="4">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Отмена"
                android:textColor="@drawable/button_text_color_black"
                android:id="@+id/edit_expense_type_popup_cancel_button"
                android:layout_weight="1"
                android:background="@drawable/keyboard_buttons_custom" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
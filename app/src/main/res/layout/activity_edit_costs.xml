<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_costs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newcosts.EditCostsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingLeft="2dp">

            <TextView
                android:text="@string/edit_costs_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editCosts_CostNameLabel"
                android:layout_weight="1"
                android:lines="1"
                android:ems="10" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editCosts_AvailableCostNames"
                android:layout_weight="1"
                android:textAlignment="center"
                android:minHeight="30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:weightSum="2">

            <TextView
                android:text="@string/edit_costs_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editCosts_costSumLabel"
                android:layout_weight="1"
                android:ems="10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editCosts_costSum"
                android:layout_weight="1"
                android:textAlignment="center"
                android:editable="false"
                android:minHeight="30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:layout_marginTop="2dp">

            <TextView
                android:text="@string/edit_costs_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:ems="10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editCosts_costDate"
                android:layout_weight="1"
                android:textAlignment="center"
                android:editable="false"
                android:focusable="false"
                android:minHeight="30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:layout_marginTop="2dp">

            <TextView
                android:text="@string/edit_costs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:ems="10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editCosts_cost_note"
                android:layout_weight="1"
                android:editable="false"
                android:focusable="false"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF9800"
            android:layout_marginTop="5dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:foregroundGravity="bottom">

            <Button
                android:text="@string/edit_costs_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editCosts_saveButton"
                android:layout_weight="1"
                android:background="@drawable/keyboard_buttons_custom"
                android:textColor="@drawable/button_text_color"
                android:onClick="onSaveCancelButtonsClick" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FF9800"></LinearLayout>

            <Button
                android:text="@string/edit_costs_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editCosts_cancelButton"
                android:background="@drawable/keyboard_buttons_custom"
                android:textColor="@drawable/button_text_color"
                android:layout_weight="1"
                android:onClick="onSaveCancelButtonsClick" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF9800"></LinearLayout>

    </LinearLayout>

</RelativeLayout>
